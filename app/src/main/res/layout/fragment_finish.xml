<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ch.avendia.passabene.FinishActivity$PlaceholderFragment">


    <ImageView
        android:id="@+id/finishHelpImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/finishTitle1"
        android:background="@drawable/finishhelp"
        android:scaleType="fitXY"
        />

    <TextView
        android:id="@+id/finishTitle1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="QR Code ihrer passabene Kasse scannen"
        android:textSize="20dp" />



    <TextView
        android:id="@+id/finishTitle2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/finishTitle1"
        android:text="Zum abschliessen ihres Einkaufs scannen Sie bitte den QR-Code an ihrer passabene Kasse."
        android:textSize="12dp" />

    <Button
        android:id="@+id/finishButton"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Scan"
        android:background="#ff99C13C"
        android:textColor="#ffffff"
        android:layout_alignParentBottom="true"/>


</RelativeLayout>
