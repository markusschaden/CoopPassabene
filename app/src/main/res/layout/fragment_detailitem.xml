<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff1f1f1"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ch.avendia.passabene.DetailitemActivity$PlaceholderFragment">

    <TextView
        android:id="@+id/itemDetailText"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:text="Artikel Detail"
        android:textSize="16dip"
        android:paddingBottom="10dip"/>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/itemDetailText"
        android:background="#ffffff"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <TextView
            android:id="@+id/itemQuantity"
            android:layout_width="80dip"
            android:layout_height="wrap_content"
            android:text="100"
            android:textSize="26dip"
            android:background="@drawable/quantityselector"
            android:gravity="right"
            android:layout_marginRight="10dip"
            android:paddingRight="5dip"
            android:paddingTop="1dip"
            android:paddingBottom="1dip"
            android:layout_marginBottom="10dip"/>


        <TextView
            android:id="@+id/itemDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/itemQuantity"
            android:text="XXXXXXXXXXXXXX"
            android:textSize="14dip"/>

        <TextView
            android:id="@+id/itemPricePerItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/itemDetail"
            android:layout_toRightOf="@+id/itemQuantity"
            android:text="StÃ¼ck 1.75"
            android:textSize="12dip"
            android:textColor="#ff959595"/>

        <TextView
            android:id="@+id/itemTotalPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/itemDetail"
            android:text="3.50"
            android:textSize="14dip"
            android:layout_alignParentRight="true"
            android:gravity="right"/>

        <Button
            android:id="@+id/btnDecQuantity"
            android:layout_width="40dip"
            android:layout_height="30dip"
            android:layout_below="@+id/itemQuantity"
            android:text="-"
            android:textSize="20dip"
            android:textStyle="bold"
            android:background="@drawable/quantityactive"/>

        <Button
            android:id="@+id/btnIncQuantity"
            android:layout_width="40dip"
            android:layout_height="30dip"
            android:layout_below="@+id/itemQuantity"
            android:layout_toRightOf="@+id/btnDecQuantity"
            android:text="+"
            android:textSize="20dip"
            android:textStyle="bold"

            android:background="@drawable/quantityactive"/>

        <ImageButton
            android:id="@+id/btnRemoveItem"
            android:layout_width="30dip"
            android:layout_height="30dip"
            android:text="Del"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/itemQuantity"
            android:src="@drawable/recyclebin"
            android:background="#ffffff"
            android:scaleType="fitXY"
            />


    </RelativeLayout>

</RelativeLayout>
